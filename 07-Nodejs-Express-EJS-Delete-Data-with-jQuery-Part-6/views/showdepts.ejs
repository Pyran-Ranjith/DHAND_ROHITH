  <script language="javascript">
  $(document).ready(function(e){
    $('.delete').on('click', function(e){
      var currenrRow = $(this).closest('tr');
      var id = currenrRow.find("td:eq(0)").text();
      // alert(id);
      $.ajax({
        url: "/deletedept",
        type: "POST",
        data: {deptid: id},
        success: function(result){
          alert("Daepartment was deleted");
          // window.location.href="http://localhost:3000/showdepts";
        },
        error: function(err){

        }
      })
    });
  });
</script>

  <body>
    <div class="container">
      <h1>List of our departments</h1>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">DeptName</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(let d of depts){ %>
          <tr>
            <td><%=d.id%></td>
            <td><%=d.dname%></td>
            <td><button class="btn btn-danger delete">Delete</td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </body>
</html>
